{
  "name": "wanstage-node-ts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier -w \"src/**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "py-lint": "ruff check .",
    "py-fix": "ruff check . --fix && black .",
    "test": "vitest run",
    "test:ci": "vitest run",
    "html:check": "html-validate \"public/**/*.html\" \"src/**/*.html\"",
    "check:ts": "tsc --noEmit",
    "check:js": "eslint .",
    "check:py:ruff": "python -m ruff check .",
    "check:py:black": "python -m black --check .",
    "check:html": "html-validate 'public/**/*.html' 'src/**/*.html' || echo 'No HTML files found; skipped'",
    "check:all": "npm run check:ts && npm run check:js && npm run check:py:ruff && npm run check:py:black && npm run check:html"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^13.24.0",
    "html-validate": "^8.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "playwright": "^1.41.2",
    "prettier": "^3.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.9.2",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js}": [
      "eslint --fix",
      "prettier -w"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier -w"
    ]
  }
}
