{
  "type": "flex",
  "altText": "WANSTAGE 投稿プレビュー",
  "contents": {
    "type": "bubble",
    "hero": {
      "type": "image",
      "url": "{{ image }}",
      "size": "full",
      "aspectMode": "cover",
      "aspectRatio": "16:9"
    },
    "body": {
      "type": "box",
      "layout": "vertical",
      "contents": [
        {
          "type": "box",
          "layout": "vertical",
          "position": "relative",
          "contents": [
            {
              "type": "text",
              "text": "{{ title }}",
              "weight": "bold",
              "size": "md",
              "wrap": true
            },
            {
              "type": "text",
              "text": "{{ date }}　slot #{{ slot }}",
              "size": "xs",
              "color": "#6B7280",
              "margin": "sm"
            }
          ]
        },
        {
          "type": "text",
          "text": "{{ body }}",
          "wrap": true,
          "size": "sm",
          "margin": "md"
        },
        {
          "type": "box",
          "layout": "horizontal",
          "spacing": "sm",
          "margin": "md",
          "contents": [
            {
              "type": "box",
              "layout": "vertical",
              "paddingAll": "6px",
              "cornerRadius": "8px",
              "backgroundColor": "#EEF2FF",
              "contents": [
                { "type": "text", "text": "{{ tags }}", "size": "xs", "color": "#4F46E5", "wrap": true }
              ]
            }
          ]
        }
      ]
    },
    "footer": {
      "type": "box",
      "layout": "horizontal",
      "contents": [
        {
          "type": "button",
          "style": "primary",
          "height": "sm",
          "action": { "type": "uri", "label": "Open", "uri": "{{ url }}" }
        }
      ]
    }
  }
}
